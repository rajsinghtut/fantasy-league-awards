generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model DraftPick {
  id         Int      @id @default(autoincrement())
  pickNumber Int
  playerId   String
  playerName String
  position   String
  team       String
  draftedBy  String
  round      Int
  createdAt  DateTime @default(now())
}

model Team {
  id        String   @id
  name      String
  avatar    String?
  createdAt DateTime @default(now())
}

model DraftEvaluation {
  id         Int      @id @default(autoincrement())
  teamId     String
  teamName   String
  grade      String
  strengths  String
  weaknesses String
  comment    String
  createdAt  DateTime @default(now())
}